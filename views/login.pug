extends layout.pug
block head
    link(rel="stylesheet" href="/stylesheets/login.css")
block content
  .login-area
      .login-wrap
        .content
          .login-container
            h1.login-container-title
              a(href="/")
                img(src="/images/logo-ceo.png" alt="")
            div
              p.login-message #{msg}
              form.login-form(action="/login" method="post")
                p.input-id
                  input(type="text" name="userId" placeholder="아이디")
                p.input-password
                  input(type="password" name="password" placeholder="비밀번호")
                .login-etc
                  //- p.id-save
                  .check-optional.d-flex
                    input#check-optional-input(type='checkbox' name="isSavedUserId")
                    label(for='check-optional-input')
                    //- input(type="checkbox" name="isSavedUserId")
                    span 아이디 저장
                  div.login-not
                    p
                      a(href="") 아이디
                      |  / 
                      a(href="") 비밀번호 찾기
                    a(href="/signup") 회원가입
                p
                  button.login-submit-btn(type="button") 로그인
        .footer
          .footer-link
            a(href="https://mart.baemin.com/")
              img(src="/images/login-logo-mart.png" alt="")
            a(href="https://academy.baemin.com/?utm_source=ceopage&utm_medium=link&utm_campaign=ongoing&utm_content=logo_login")
              img(src="/images/login-logo-academy.png" alt="")
            a(href="https://note.baemin.com/")
              img(src="/images/login-logo-jangbu.png" alt="")
          p.copyright © Woowa Brothers Corp.
block script
  script(type="module" src="/javascripts/login.js")
